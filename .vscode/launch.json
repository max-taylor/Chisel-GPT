  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'ChiselGPT'",
      "cargo": {
        "args": [
          "build",
          "--bin=chisel_gpt",
          "--package=chisel_gpt"
        ],
        "filter": {
          "name": "ChiselGPT",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'ChiselGPT'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=chisel_gpt",
          "--package=chisel_gpt",
          "outside_dimension"
        ],
        "filter": {
          "name": "chisel_gpt",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
  ]
}